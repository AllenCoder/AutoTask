<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:cardBackgroundColor="?colorSurface"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"
        app:strokeColor="@color/material_on_surface_stroke">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_task_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_task_name" />


            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?colorPrimary"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/tv_badge"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/tv_task_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_task_name"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/tv_badge"
                style="@style/BadgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/preload_task"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_task_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_author"
                app:layout_constraintStart_toEndOf="@+id/tv_task_name"
                app:layout_constraintTop_toTopOf="@+id/tv_task_name"
                app:layout_goneMarginEnd="16dp" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:dividerColor="@color/material_on_surface_stroke"
                app:layout_constraintTop_toBottomOf="@+id/tv_task_desc" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/ms_enabled"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <ImageButton
                android:id="@+id/ib_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_selectable_circle"
                android:contentDescription="@{@string/edit_task}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ms_enabled"
                app:srcCompat="@drawable/ic_edit_24dp"
                app:tint="@color/color_text_control_normal" />

            <ImageButton
                android:id="@+id/ib_track"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_selectable_circle"
                android:contentDescription="@{@string/track_task_flow}"
                app:layout_constraintStart_toEndOf="@+id/ib_delete"
                app:layout_constraintTop_toTopOf="@+id/ms_enabled"
                app:layout_goneMarginStart="16dp"
                app:srcCompat="@drawable/ic_timeline_24px"
                app:tint="@color/color_text_control_normal" />

            <ImageButton
                android:id="@+id/ib_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_selectable_circle"
                android:contentDescription="@{@string/delete}"
                app:layout_constraintBottom_toBottomOf="@+id/ib_edit"
                app:layout_constraintStart_toEndOf="@+id/ib_edit"
                app:layout_constraintTop_toTopOf="@+id/ms_enabled"
                app:srcCompat="@drawable/delete_forever_24px"
                app:tint="@color/color_text_control_normal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>